[files]
url=http://savannah.nongnu.org/projects/man-db
file=man-db-2.6.6.tar.xz

[build]
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var CFLAGS="-I/home/qafir/linux/env/usr/include" --enable-shared --enable-static --enable-mandirs=GNU --disable-rpath --with-sysroot=/home/qafir/linux/env --with-browser=links --with-browser=less --with-gzip=gzip --disable-automatic-update LDFLAGS="-L/home/qafir/linux/env/usr/lib"

make -j5

[install]
make DESTDIR=/tmp/pkg install
